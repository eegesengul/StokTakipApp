<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stok Takip Sistemi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Stok Takip</a>
            <div>
                <a class="nav-link text-white d-inline" href="/Products">Ürünler</a>
            </div>
        </div>
    </nav>

    <!-- Ana İçerik -->
    <div class="container py-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-muted py-3 mt-5 border-top">
        <small>Stok Takip Sistemi © @DateTime.Now.Year</small>
    </footer>

    <!-- Bootstrap JS (opsiyonel) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>